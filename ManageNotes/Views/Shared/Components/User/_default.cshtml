@using ManageNotes.Data
@model ManageNotes.ViewModel.UserViewModel
@{
            String role;
            role = "کاربر";
            if (Model.Role == TypeAccountEnum.Owner)
            {
                role = "مالک";
            }
            else if (Model.Role == TypeAccountEnum.Admin)
            {
                role = "ادمین";
            }
        }
<div style="width: 115px; height: 115px;" class="list-group-item-info">
    <div class="center">
        <img loading="lazy" src="@Url.Action("ShowImage", "User",new {id=@Model.Id})" width="50px" height="50px">
    </div>
    <div style="text-align: center">
        <p>@role</p>
        <p>@Model.UserName</p>
    </div>
</div>

