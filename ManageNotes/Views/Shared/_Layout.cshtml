<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ManageNotes</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css"/>
    <link rel="stylesheet" href="~/lib/iconic/font/css/open-iconic-bootstrap.min.css">
    @await RenderSectionAsync("CSSStyle",required:false)
    <style>
        body{
        font-family: 'Samim', Arial, sans-serif;
        direction: rtl;
        text-align: right;
        background-color: white;
        }
        header{
        background-color: #e2e3e5 !important;
        }
    </style>
</head>
<body>
<header>
    <div class="row">
        <div class="col-md-2">
            <img src="~/image/task-notes-icon.png" width="115px" height="115px">
        </div>
        <div class="col-md-7"></div>
        <div class="col-md-3" style="direction: ltr">
            <div>
                
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">سیستم مدیریت یادداشت</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a id="home" class="nav-link text-dark" asp-area="" 
                           asp-controller="Home" asp-action="Index"><span class="oi oi-home"></span>  خانه</a>
                    </li>
                    <li class="nav-item">
                        <a id="login" class="nav-link text-dark" asp-area=""
                           asp-controller="User" asp-action="LogIn"><span class="oi oi-account-login"></span>  ورود</a>
                    </li>
                    
                    <li class="nav-item">
                        <a id="logup" class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="LogUp">
                            <span class="oi oi-plus"></span>  ثبت نام</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - سیستم مدیریت یادداشت
    </div>
</footer>
<script src="~/lib/jquery/jquery-3.6.0.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

<script>
if (self.location.pathname == '/'){
    document.getElementById('home').classList.add('active');
    }
else if (self.location.pathname == "/User/LogIn"){
         document.getElementById('login').classList.add('active');
         }
else if (self.location.pathname == "/User/LogUp"){
         document.getElementById('logup').classList.add('active');
         }
</script>

</body>
</html>